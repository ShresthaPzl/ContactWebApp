<div class="modal fade" id="addcontact" tabindex="-1" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-info" id="name">New Contact</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/contact/addnewcontact" method="post">
                <input type="hidden" name="Id" id="id" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            First Name
                            <input type="text" class="form-control" name="FirstName" id="firstname" placeholder="Enter First Name">
                        </div>
                        <div class="col-md-6">
                            Middle Name
                            <input type="text" class="form-control" name="MiddleName" id="middlename" placeholder="Enter Middle Name">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            Last Name
                            <input type="text" class="form-control" name="LastName" id="lastname" placeholder="Enter last Name">
                        </div>
                        <div class="col-md-6">
                            Relation
                            <input type="text" class="form-control" name="Relation" id="relationE" placeholder="Your Relation">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            Phone
                            <input type="text" class="form-control" name="PhoneNumber" id="phoneE" placeholder="Enter Phone Number">
                        </div>
                        <div class="col-md-6">
                            E-mail
                            <input type="text" class="form-control" name="Email" id="emailE" placeholder="Enter E-mail">
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>